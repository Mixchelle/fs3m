#!/usr/bin/env bash
set -euo pipefail

# Garante que estamos na raiz do projeto (onde estÃ¡ o script)
cd "$(dirname "$0")"

# 1) Garante venv pronta e ativa
if [ ! -d ".venv" ]; then
  echo "ðŸ”§ Criando venv em .venv ..."
  python3 -m venv .venv
fi

# Ativa a venv (funciona em bash/zsh)
# shellcheck disable=SC1091
source .venv/bin/activate

# 2) Uso e instalaÃ§Ã£o
if [ $# -lt 1 ]; then
  echo "Uso: ./pipadd pacote[==versao] [outro_pacote ...]"
  exit 1
fi

echo "âž¡ï¸  Instalando: $*"
python3 -m pip install "$@"

# 3) Atualiza requirements.txt
echo "ðŸ§¾ Atualizando requirements.txt"
python3 -m pip freeze > requirements.txt

echo "âœ… Pronto! ($(wc -l < requirements.txt) dependÃªncias registradas)"
